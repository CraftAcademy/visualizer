.row
  - if @account_summaries
    %h3
    Properties for
    = @account_summaries.username
    %ul.list
      - @account_summaries.items.each do |item|
        %li.account-name
          = item.name
          (#{item.id})
          - if item.web_properties
            %ul.list
              - item.web_properties.each do |property|
                %li.property-name
                  = property.name
                  = "(#{property.id})"
                  - if property.profiles
                    %ul.list
                      - property.profiles.each do |profile|
                        %li.property-profile
                          =  link_to profile.name, get_data_path(account_id: item.id, web_property_id: property.id, profile_id: profile.id), method: :get
                          (#{profile.id})

.row
  - if @image
    %h3
      = @property.name
    = image_tag @image
